{
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },

    "globals": {
        "APP": "readonly",
        "containerCards": "writable",
        "level": "writable",
        "createPngArray": "readonly",
        "duplicateArray": "readonly",
        "shuffle": "readonly",
        "blocking": "writable"
    },
    "extends": ["eslint:recommended", "prettier"],
    "plugins": ["prettier"],
    "parserOptions": {
        "ecmaVersion": 2020,
        "sourceType": "module"
    },
    "rules": {
        "endOfLine": "off"
    }
}
